<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true">

	<import resource="T1000Context.xml" />

	<bean id="t1000Pool" class="ua.maventraing.compareoop.pools.T1000robotPool">
<!-- 		injections over property in T1000RobotPool Class -->
<!-- 		<property name=""> -->
<!--  			announcig list  -->
<!-- 			<list> -->
<!--  				first bean over reference --> 
<!-- 				<ref bean="t1000" /> -->

<!--  				second bean will be initialize new values --> 
<!-- 				<bean class="ua.maventraing.compareoop.robot.ModelT1000"> -->

<!-- 					<constructor-arg ref="toshibaHead" index="0" /> -->
<!-- 					<constructor-arg ref="toshibaHand" index="1" /> -->
<!-- 					<constructor-arg ref="sonyLeg" index="2" /> -->

<!-- 					<constructor-arg value="green" index="3" type="String" /> -->
<!-- 					<constructor-arg value="2015" index="4" type="int" /> -->
<!-- 					<constructor-arg value="false" index="5" type="boolean" /> -->
<!-- 				</bean> -->

<!-- 			</list> -->

<!-- 		</property> -->
		<constructor-arg name="robotCollections">
			<map>
				<entry key="Manufacturing 2007">
					<bean class="ua.maventraing.compareoop.robot.ModelT1000"
						parent="baseModel">
						<constructor-arg value="bronze" type="String"
							index="3" />
						<constructor-arg value="2007" type="int" index="4" />
						<constructor-arg value="true" type="boolean"
							index="5" />
					</bean>
				</entry>

				<entry key="Manufacturing 2006" value-ref="t1000" />
				<entry key="Manufacturing 2008" value-ref="t1000Empty" />

			</map>
		</constructor-arg>
	</bean>


	<bean id="t1000ColPool" class="ua.maventraing.compareoop.pools.T1000robotPool">
		<!-- injections over property in T1000RobotPool Class -->
		<!-- <property name=> -->
		<!-- announcig list -->
		<constructor-arg name="robotCollectionSh">
			<list>
				<!-- first bean over reference -->
				<ref bean="t1000" />

				<!-- second bean will be initialize new values -->
				<bean class="ua.maventraing.compareoop.robot.ModelT1000">

					<constructor-arg ref="toshibaHead" index="0" />
					<constructor-arg ref="toshibaHand" index="1" />
					<constructor-arg ref="sonyLeg" index="2" />

					<constructor-arg value="red" index="3" type="String" />
					<constructor-arg value="2015" index="4" type="int" />
					<constructor-arg value="false" index="5" type="boolean" />
				</bean>

				<bean class="ua.maventraing.compareoop.robot.ModelT1000"
					parent="baseModel">
					<constructor-arg value="red" type="String" index="3" />
					<constructor-arg value="2007" type="int" index="4" />
					<constructor-arg value="true" type="boolean" index="5" />
				</bean>

				<bean class="ua.maventraing.compareoop.robot.ModelT1000"
					parent="baseModel">
					<constructor-arg value="blue" type="String" index="3" />
					<constructor-arg value="2007" type="int" index="4" />
					<constructor-arg value="true" type="boolean" index="5" />
				</bean>

				<bean class="ua.maventraing.compareoop.robot.ModelT1000"
					parent="baseModel">
					<constructor-arg value="silver" type="String"
						index="3" />
					<constructor-arg value="2007" type="int" index="4" />
					<constructor-arg value="true" type="boolean" index="5" />
				</bean>

			</list>
		</constructor-arg>

		<!-- </property> -->
	</bean>

	<!-- SpEL -->

	<bean id="selectAnCriteriaRed" class="ua.maventraing.compareoop.pools.T1000robotPool">
		<constructor-arg name="robotCollectionSh"
			value="#{t1000ColPool.robotCollectionSh.?[color.toUpperCase() eq 'RED']}">
		</constructor-arg>
	</bean>

</beans>
